define_color "customgray" 70 70 70 

color "type=DEFAULT fg=BLACK bg=customgray underline=1 italic=1"

color "type=HEADINGS fg=BLACK bg=WHITE bold=0 dim=0"
color "type=HEADINGS_ODD fg=BLACK bg=WHITE bold=0 dim=0"
color "type=NUMB fg=GREEN bg=DEFAULT_COLOR bold=1 dim=0"

color "type=CELL_NEGATIVE fg=RED bg=DEFAULT_COLOR bold=1 dim=0"

color "type=STRG fg=WHITE bg=DEFAULT_COLOR bold=0 dim=0"
color "type=GRID_EVEN fg=BLACK bg=customgray underline=1 italic=1"

set default_copy_to_clipboard_cmd="wl-copy <"
set default_paste_from_clipboard_cmd="wl-paste"


nnoremap "y" "h"
nnoremap "h" "j"
nnoremap "a" "k"
nnoremap "e" "l"
# nnoremap "ie" "e"

nnoremap "zy" "zh"
nnoremap "ze" "zl"
nnoremap "zY" "zH"
nnoremap "zE" "zL"


nnoremap "j" "a" 
nnoremap "J" "A" 
nnoremap "_" "'" 

nnoremap "''" "yy:ccopy<CR>"
nnoremap "'c" "yc"
nnoremap "'r" "yr"

nnoremap "k" "J"
nnoremap "-" ","
nnoremap "l" "e"

vnoremap "y" "h"
vnoremap "h" "j"
vnoremap "a" "k"
vnoremap "e" "l"
# vnoremap "r" "e"

vnoremap "_" "'"
vnoremap "'" "y"
vnoremap "-" ","
vnoremap "l" "e"

enoremap "y" "h"
enoremap "h" "j"
enoremap "a" "k"
enoremap "e" "l"

